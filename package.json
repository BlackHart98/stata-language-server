{
  "name": "stata-language-server",
  "description": "Simple Stata Syntaxlint",
  "icon": "assets/img/icon.png",
  "author": "Hai Bo",
  "repository": "https://github.com/HankBO/stata-language-server",
  "license": "MIT",
  "version": "1.0.0",
  "publisher": "Hai Bo",
  "engines": {
    "vscode": "^1.55.0"
  },
  "categories": [
    "Linters",
    "Other",
    "Data Science"
  ],
  "activationEvents": [
    "onLanguage:stata"
  ],
  "contributes": {
    "configuration": [
      {
        "type": "object",
        "title": "Stata Server Configuration",
        "properties": {
          "stataServer.useCompletion": {
            "type": "boolean",
            "default": "true",
            "description": "Activate command completion, default as true."
          },
          "stataServer.useDocstring": {
            "type": "boolean",
            "default": "true",
            "description": "Show Docstring when hovering, default as true."
          },
          "stataServer.useStyleChecking": {
            "type": "boolean",
            "default": "true",
            "description": "Activate codestyle checking, default as true."
          },
          "stataServer.setMaxLineLength": {
            "type": "number",
            "minimum": "1",
            "maximum": "300",
            "default": "120",
            "description": "Set max line length for codestyle checking."
          },
          "stataServer.setIndentSpace": {
            "type": "number",
            "minimum": "1",
            "maximum": "8",
            "default": "4",
            "description": "Set indent space for codestyle checking."
          }
        }
      }
    ]
  },
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w"
  },
  "devDependencies": {
    "@types/node": "^14.14.41",
    "@types/vscode": "^1.55.0",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.23.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "vsce": "^1.96.1",
    "vscode-languageclient": "^7.0.0"
  },
  "bugs": {
    "url": "https://github.com/HankBO/stata-language-server/issues"
  },
  "keywords": [
    "Stata",
    "Economics"
  ]
}
